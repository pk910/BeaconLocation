<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<TableLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:stretchColumns="1">

<TableRow
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:icon="@mipmap/add_icon"
        android:background="#ff009d98"
        android:id="@+id/imageView"
        android:src="@mipmap/add_icon"
        android:layout_column="0" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/name"
        android:text="ADD MACHINE"
        android:textSize="30dp"
        android:background="#ff009d98"
        android:textColor="#ffffff"
        android:layout_column="1" />

</TableRow>

</TableLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06">

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Enter Machine Name:"
            android:id="@+id/label" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/editText"
            android:layout_gravity="right" />
    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="163dp"
        android:id="@+id/beaconList"
        android:layout_weight="0.90" />

    <TextView
        android:id="@+id/emptyList_add_machines"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="@string/emptyList_add_machines"
        android:textColor="#525252"
        android:textSize="19.0sp"
        android:visibility="gone" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/button_cancel"
            android:layout_weight="0.05" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create"
            android:id="@+id/button_create"
            android:layout_weight="0.05" />
    </LinearLayout>

</LinearLayout>