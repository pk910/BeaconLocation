<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:layout_column="0"
                android:background="#ffa0cd43"
                android:icon="@mipmap/slot_machine"
                android:src="@mipmap/slot_machine" />


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:background="#ffa0cd43"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"
                android:textSize="30dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/allBeaconsInRange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:layout_span="2"
                android:gravity="center"
                android:text="@string/allBeaconsInRange"
                android:textColor="#ff009600"
                android:textSize="19.0sp"
                android:visibility="gone" />

        </TableRow>
    </TableLayout>

    <ListView
        android:id="@+id/beaconList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/emptyList_machine"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="@string/emptyList_machine"
        android:textColor="#525252"
        android:textSize="19.0sp"
        android:visibility="gone" />

</LinearLayout>